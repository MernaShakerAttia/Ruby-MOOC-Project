  <%= form_for(@lecture) do |f| %>
  <% if @lecture.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@lecture.errors.count, "error") %>
      prohibited this lecture from being saved:</h2>

    <ul>
      <% @lecture.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :content %><br>
    <%= f.cktext_area :content ,class: 'form-control'%>
  </div>

  <div class="field">
    <%= f.label :attachment %><br>
    <%= f.file_field :attachment %>
  </div>

  <div class="field">
    <%= f.label :Course_id %><br>
    <%= f.collection_select :Course_id ,Course.all ,:id,:title ,class: 'form-control'%>
  </div>

  <div class="actions">
    <%= f.submit :class => 'btn btn-info'%>
  </div>
  <% end %>
